@model IEnumerable<DemoWebApp.Models.Student>

@{
    ViewData["Title"] = "Index";
}


<style>
body {
  background: url('https://img.freepik.com/free-photo/globe-technology-business-with-gradient-wallpaper_53876-97642.jpg?t=st=1647026309~exp=1647026909~hmac=8644b8bb5cc0dd3d54fd43b1aca14ac14afb04a5b7252c8f6034713b34b6a878&w=900') no-repeat center center fixed;
  background-size: cover;
  opacity: 2.0;
}
</style>


<h1 align="center">List Of Students</h1>

<p> 
   <a 
   type="button" class="btn btn-outline-dark"
   asp-action="Create">Create New</a>
</p>

<!-- Specific section -->
<form method = "get" asp-action="SearchBySection">
    <p>
        <input type="search" placeholder="Enter a section ..." value="@ViewData["GetStudentsDetails"]" name="section" style="width:500px;" />
        <input type="submit" value="Search" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary" >Reset</a>
    </p>
</form>

<table class="table table-success table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CGPA)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CGPA)
            </td>
            <td>
                <a
                type="button" class="btn btn-outline-dark"
                asp-action="Edit" asp-route-id="@item.Id">Edit</a> 

                <a
                type="button" class="btn btn-outline-dark"
                asp-action="Details" asp-route-id="@item.Id">Details</a> 

                <a
                type="button" class="btn btn-outline-dark"
                asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
