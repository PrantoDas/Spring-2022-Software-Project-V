@model DemoWebApp.Models.Department

@{
    ViewData["Title"] = "Edit";
}
<link href="~/css/Departments-Create.css" rel="stylesheet" type="text/css" />

<h1>Edit</h1>

<h4>Department</h4>
<hr />

<div class="card"> 
    <div class="card-body-one">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartmentId" />
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label"></label>
                <input asp-for="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalStudents" class="control-label"></label>
                <input asp-for="TotalStudents" class="form-control" />
                <span asp-validation-for="TotalStudents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentHead" class="control-label"></label>
                <input asp-for="DepartmentHead" class="form-control" />
                <span asp-validation-for="DepartmentHead" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCredits" class="control-label"></label>
                <input asp-for="TotalCredits" class="form-control" />
                <span asp-validation-for="TotalCredits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 </div>
</div>

<div>
    <center>
    <a asp-action="Index" class="btn btn-info" >Back to List</a>
    </center>
</div>

